#!/bin/sh

branch=${1-main}

echo "Change upstream from master to '$branch'" && \
  git checkout $branch && \
  git branch -m master $branch && \
  git fetch && \
  git branch --unset-upstream && \
  git branch -u origin/$branch && \
  git symbolic-ref refs/remotes/origin/HEAD refs/remotes/origin/$branch && \
  echo "done."

